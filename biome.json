{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["dist", "node_modules", "types", ".next", "generated", "*.json"]
	},
	"formatter": {
		"enabled": true,
		"lineEnding": "lf",
		"indentWidth": 2,
		"indentStyle": "tab",
		"lineWidth": 200
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off",
				"noExplicitAny": "warn"
			},
			"correctness": {
				"noUnusedImports": "warn"
			}
		}
	}
}
