    "scripts": {
        "build": "yarn workspaces run build",
        "bootstrap": "npx lerna bootstrap",
        "lint": "npx eslint packages/ scripts/",
        "lint:fix": "yarn lint --fix",
        "docs": "npx rimraf docs && npx typedoc --options typedoc.json packages && node scripts/post-docs.js",
        "test": "npx jest",
        "test:build": "yarn build && npx jest",
        "prepublishOnly": "yarn lint && yarn workspaces run prepublishOnly",
        "prepare": "husky install",
        "prettier": "prettier --write **/*.{ts,js,json,yml,yaml}",
        "reset": "cd scripts && node refresh.js"
    },
    "devDependencies": {
        "@babel/core": "^7.12.17",
        "@babel/generator": "^7.13.0",
        "@babel/preset-env": "^7.12.17",
        "@babel/preset-typescript": "^7.12.17",
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-angular": "^11.0.0",
        "@sapphire/eslint-config": "^3.2.3",
        "@strictsoftware/typedoc-plugin-monorepo": "^0.3.1",
        "@types/jest": "^26.0.24",
        "@typescript-eslint/eslint-plugin": "^3.9.0",
        "@typescript-eslint/parser": "^3.9.0",
        "babel-jest": "^26.6.3",
        "babel-plugin-const-enum": "^1.0.1",
        "babel-plugin-replace-ts-export-assignment": "^0.0.2",
        "dotenv": "^8.2.0",
        "eslint": "^7.6.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-simple-import-sort": "^5.0.3",
        "eslint-plugin-sort-keys-fix": "^1.1.1",
        "husky": "^6.0.0",
        "jest": "^27.0.6",
        "lerna": "^3.22.1",
        "lint-staged": "^10.4.2",
        "prettier": "^2.0.5",
        "rimraf": "^3.0.2",
        "typedoc": "^0.19.2",
        "typedoc-plugin-remove-references": "0.0.5",
        "typescript": "^4.0.5"
    },
    "workspaces": [
        "packages/guilded-api-typings",
        "packages/common",
        "packages/rest",
        "packages/ws",
        "packages/guilded.js",
        "packages/*"
    ],
    "engines": {
        "npm": "please-use-yarn",
        "yarn": ">= 1.22.10",
        "node": ">= 16.0.0"
    }
}